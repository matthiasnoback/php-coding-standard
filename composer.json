{
    "name": "matthiasnoback/php-coding-standard",
    "description": "PHPCode_Sniffer coding standard based on PSR-1 and PSR-2",
    "license": "MIT",
    "type": "library",
    "keywords": ["code sniffer", "coding standard"],
    "homepage": "http://github.com/matthiasnoback/php-coding-standard",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "~1.5",
        "beberlei/assert": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-0": {
            "Matthias\\Codesniffer\\Tests": "tests/",
            "Matthias\\PhpCodingStandard\\Tests": "tests/",
            "Matthias\\Codesniffer\\": "src/",
            "Matthias\\PhpCodingStandard": "src/"
        }
    }
